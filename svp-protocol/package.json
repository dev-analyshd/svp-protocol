{
  "name": "svp-protocol",
  "version": "1.0.0",
  "description": "SVP Protocol - Structured Valuation Protocol for on-chain asset tokenization and value-weighted governance",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "deploy:testnet": "hardhat run scripts/simpleDeploy.ts --network arbitrumSepolia",
    "deploy:robinhood": "hardhat run scripts/simpleDeploy.ts --network robinhoodChain",
    "deploy:arb": "hardhat run scripts/simpleDeploy.ts --network arbitrumSepolia",
    "verify": "hardhat etherscan-verify --network",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "format": "prettier --write .",
    "lint": "solhint contracts/**/*.sol"
  },
  "keywords": [
    "svp",
    "protocol",
    "valuation",
    "tokenization",
    "governance",
    "erc-4626",
    "erc-1400",
    "arbitrum",
    "ethereum"
  ],
  "author": "Hudu Yusuf (Analys)",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-ethers": "^3.1.3",
    "@nomicfoundation/hardhat-foundry": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@openzeppelin/contracts": "^4.9.0",
    "@openzeppelin/contracts-upgradeable": "^4.9.0",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "chai": "^4.5.0",
    "ethers": "^5.7.2",
    "hardhat": "^2.22.0",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.3.0",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.0",
    "ts-node": "^10.9.0",
    "typechain": "^8.3.2",
    "typescript": "^5.3.0"
